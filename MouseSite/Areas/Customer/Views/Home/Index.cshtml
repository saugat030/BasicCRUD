@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var items in Model)
    {
        <div class="col-lg-3 col-sm-6 mb-4">
            <div class="card border border-light shadow-sm h-100 p-3">
                <img src="@items.ImageUrl" class="card-img-top rounded" />
                <div class="card-body">
                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@items.Title</p>
                    <p class="card-text text-warning text-center">by <b>@items.Author</b></p>
                    <p class="mb-0 text-dark text-center text-opacity-75">
                        <span class="text-decoration-line-through">@items.ListPrice.ToString("c")</span>
                    </p>
                    <p class="text-dark text-center text-opacity-75">
                        As low as: <span>@items.Price100.ToString("c")</span>
                    </p>
                </div>
                <div class="card-footer bg-white border-0 p-0">
                    <a asp-action="Details" asp-route-prdid="@items.Id" class="btn btn-success bg-gradient border-0 w-100">
                        Buy Now
                    </a>
                </div>
            </div>
        </div>
    }
</div>
